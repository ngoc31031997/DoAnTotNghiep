                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Thêm mới" class="btn btn-success">
                        <a href="/Admin/LienHes/Index" class="btn btn-warning">Hủy</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
    
}

