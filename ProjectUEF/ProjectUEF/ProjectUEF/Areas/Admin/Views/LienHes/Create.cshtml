@model ProjectUEF.Models.LienHe

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout - Admin.cshtml";
}

<center>
    <h2>Create</h2>
</center>


@using (Html.BeginForm())
