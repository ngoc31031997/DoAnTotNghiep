@model ProjectUEF.Models.CapDoDeTai

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout - Admin.cshtml";
}

<center><h2>Create</h2></center>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
<div class="card mb-4">
    <div class="card-body">
        <form>
            <div class="form-horizontal">
                <h4>Cấp Độ Đề Tài</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group row">
                    @Html.LabelFor(model => model.CapDo, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-sm-9">
                        @Html.EditorFor(model => model.CapDo, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.CapDo, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Thêm mới" class="btn btn-success">
                    <a href="/Admin/CapDoDeTais/Index" class="btn btn-warning">Hủy</a>
                </div>
            </div>
        </form>
        </div>       
    </div>   
}

